<mvc:View
	controllerName="com.lcpg.sapui5ts.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/lcpg/sapui5ts/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<content>
			<List 
                id="list_master"
            	items="{model: 'gateway'
                        , path: '/SolicitationsSet'
                        , sorter: [{ path: 'solicitation_id', descending: true }]
                        }" 
            	mode="SingleSelectMaster" 
            	backgroundDesign="Solid" 
            	showSeparators="All" 
            	growing="true" 
            	growingThreshold="20" 
            	growingScrollToLoad="true"
            	itemPress="onPressListItem"
            >
                <infoToolbar/>
                <headerToolbar>
                    <Toolbar >
                        <content>
                            <SearchField placeholder="{i18n>lblSearch}" liveChange="onLiveChangeSearch"/>
                        </content>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem 
                                  		
                    	intro="{ path: 'gateway>solicitation_id'}" 
                    	title="{gateway>description}" 
                    	icon="sap-icon://write-new-document" 
                    	
                    	type="Active"
                    >
                        <attributes>
                            <ObjectAttribute text="{gateway>solicitation_description}"/>
                        </attributes>
                        <firstStatus>
                            <ObjectStatus 
                                class="sapUiSmallMarginBottom" 
                                text="{gateway>ano_safra}" 
                                state="{parts: [{path: 'gateway>statusUserText'}], formatter: '.formatState'}" 
                                inverted="true"
						        active="true"
                            />
                        </firstStatus>                        
			            
                    </ObjectListItem>                  
                </items>
            </List>
		</content>
	</Page>

</mvc:View>
