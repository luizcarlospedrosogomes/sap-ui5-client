{
	"_version": "1.21.0",

	"sap.app": {
		"id": "com.lcpg.sapui5ts",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "${version}"
		},
		"crossNavigation": {
			"inbounds": {
				"intent1": {
					"signature": {
						"parameters": {},
						"additionalParameters": "allowed"
					},
					"semanticObject": "manager",
					"action": "display",
					"title": "{{appTitle}}",					
					"subTitle": "{{appSubTitle}}",
					"description": "{{appDescription}}",
					"icon": "sap-icon://notes"
				}
			}
		},
		"dataSources": {			
			"SRV_LABSERV_SRV": {
				"uri": "./sap/opu/odata/sprolims/SRV_LABSERV_SRV/",
				"type": "OData",
				"settings": {
					"localUri": "localService/SRV_LABSERV_SRV/metadata.xml"
				}
			}
		},
		"sourceTemplate": {
			"id": "generator-ui5-ts-app",
			"version": "1.1.0"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "com.lcpg.sapui5ts.view.App",
			"type": "XML",
			"id": "app"
		},

		"dependencies": {
			"minUI5Version": "1.144.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {}
			}
		},

		"handleValidation": true,

		"contentDensities": {
			"compact": true,
			"cozy": true
		},

		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "com.lcpg.sapui5ts.i18n.i18n",
					"supportedLocales": ["en", "de"],
					"fallbackLocale": "en",
					"async": true
				}
			}, 
			"gateway": {
				"type": "sap.ui.model.odata.v2.ODataModel",
				"settings": {
					"defaultOperationMode": "Server",
					"defaultBindingMode": "OneWay",
					"defaultCountMode": "Request"
				},
				"dataSource": "SRV_LABSERV_SRV",
				"preload": true
			}
		},

		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"type": "View",
				"viewType": "XML",
				"path": "com.lcpg.sapui5ts.view",
				"controlId": "app",
				"controlAggregation": "pages"
			},
			"routes": [
				{
					"pattern": "",
					"name": "main",
					"target": "main"
				}
			],
			"targets": {
				"main": {
					"id": "main",
					"name": "Main"
				}
			}
		}
	}
}
